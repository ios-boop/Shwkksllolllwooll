--Variables
local Http                 = game:GetService("HttpService")
local SayMessageRequest    = game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest
local Site                 = "https://littest.site/Projects/WordBypass.php?T=" --PHP script by Binary

--Send the message.

game:GetService("Players").LocalPlayer.Chatted:connect(function(str)
   SayMessageRequest:FireServer(game:HttpGet(Site .. Http:UrlEncode(str), false), "All")
end)

